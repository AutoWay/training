<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="macommande"
            name="MA COMMANDE">
         <state
               class="org.eclipse.ui.handlers.RadioState"
               id="com.opcoach.training.rental.ui.commands.state3">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.opcoach.training.rental.ui.commands.SampleCommandHandler"
            commandId="macommande">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="Rental Menu">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.opcoach.training.rental.ui.commands.agencyview">
               </reference>
            </visibleWhen>
            <command
                  commandId="com.opcoach.training.rental.ui.commands.samplecommand"
                  label="Autre commande dans le sous menu"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="Customer Menu">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.opcoach.training.rental.ui.commands.customerSelected">
               </reference>
            </visibleWhen>
            <command
                  commandId="com.opcoach.training.rental.ui.commands.samplecommand"
                  label="Commande dans le customer menu"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="com.opcoach.training.rental.ui.commands.customerSelected">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Pour Commande">
            <command
                  commandId="macommande"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:com.opcoach.rental.ui.rentalagencyview?after=additions">
         <menu
               label="POPUP AJOUTER DIRECT">
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste CUSTOMER"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.opcoach.rental.ui.rentalagencyview?after=additions">
         <menu
               id="com.opcoach.training.agencyviewMenu"
               label="MENU DANS LA VUE">
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste CUSTOMER"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.opcoach.training.rental.ui.commands.agencyview">
         <with
               variable="activePartId">
            <equals
                  value="com.opcoach.rental.ui.rentalagencyview">
            </equals>
         </with>
      </definition>
      <definition
            id="com.opcoach.training.rental.ui.commands.customerSelected">
         <iterate>
            <instanceof
                  value="com.opcoach.training.rental.Customer">
            </instanceof>
         </iterate>
      </definition>
      <definition
            id="com.opcoach.training.rental.ui.commands.definition1">
         <iterate></iterate>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.opcoach.training.rental.ui.commands.PasteCustomer"
            commandId="org.eclipse.ui.edit.paste">
         <enabledWhen>
            <reference
                  definitionId="com.opcoach.training.rental.ui.commands.customerSelected">
            </reference>
         </enabledWhen>
         <activeWhen>
            <reference
                  definitionId="com.opcoach.training.rental.ui.commands.customerSelected">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="com.opcoach.training.rental.ui.commands.activity1"
            name="Rental">
         <enabledWhen></enabledWhen>
      </activity>
   </extension>

</plugin>
